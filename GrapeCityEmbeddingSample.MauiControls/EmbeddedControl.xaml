<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			 xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
			 x:Class="GrapeCityEmbeddingSample.MauiControls.EmbeddedControl">
	<VerticalStackLayout>
    <c1:FlexGrid x:Name="grid" AutoGenerateColumns="False" ItemsSource="{Binding Customers}">
      <c1:FlexGrid.Columns>
        <c1:GridColumn Binding="FirstName" />
        <c1:GridColumn Binding="LastName" />
        <c1:GridColumn Binding="City"/>
        <c1:GridColumn Binding="Country"/>
        <c1:GridColumn Binding="Active"/>
      </c1:FlexGrid.Columns>
    </c1:FlexGrid>
    <!--<c1:C1Calendar />-->
  </VerticalStackLayout>
</ContentView>
